{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@teif/shared": ["../shared/src"],
      "@teif/shared/*": ["../shared/src/*"],
      "@teif/generated/zod": ["../prisma/generated/zod/index.ts"]
    }
  },
  "include": ["src/**/*"]
}
